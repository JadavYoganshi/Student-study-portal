@model SSP.Models.ViewModels.LoginViewModel

@{
    ViewData["Title"] = "Login";
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>Login</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

    <style>
        body {
            background: url('/images/login2.jpeg') no-repeat center center fixed;
            background-size: cover;
            margin: 0;
            padding-top: 70px;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            height: 100vh;
        }

        .navbar {
            background: linear-gradient(90deg, rgba(0, 0, 0, 0.7), rgba(0, 0, 0, 0.5));
            transition: background 0.3s ease;
        }

        .navbar-brand, .nav-link {
            color: white !important;
            font-weight: 500;
            transition: color 0.3s ease;
        }

        .navbar-brand {
            font-size: 1.8rem;
            font-weight: bold;
            padding-left: 20px;
            padding-right: 20px;
        }

        .navbar-nav .nav-link {
            font-size: 1.1rem;
            padding: 10px 15px;
            border-radius: 5px;
            transition: background-color 0.3s ease, color 0.3s ease;
        }

            .navbar-nav .nav-link:hover {
                background-color: #007bff;
                color: white !important;
                text-decoration: none;
            }

            .navbar-nav .nav-link:focus {
                outline: none;
            }

        .navbar:hover {
            background: linear-gradient(90deg, rgba(0, 0, 0, 0.9), rgba(0, 0, 0, 0.8));
        }

        .login-box {
            background-color: rgba(255, 255, 255, 0.95);
            padding: 40px;
            width: 350px;
            border-radius: 10px;
            box-shadow: 0 0 15px rgba(0,0,0,0.3);
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
        }

            .login-box h2 {
                margin-bottom: 25px;
                color: #333;
                text-align: center;
            }

        .btn-primary {
            background-color: #4e73df;
            border: none;
        }

            .btn-primary:hover {
                background-color: #375a8c;
            }

        a {
            text-decoration: none;
            color: #4e73df;
        }

            a:hover {
                text-decoration: underline;
            }
    </style>
</head>
<body>
    <!-- Transparent Navbar -->
    <nav class="navbar navbar-expand-lg navbar-light fixed-top">
        <a class="navbar-brand" href="#">Student Study Portal</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
            <span class="navbar-toggler-icon bg-light"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav ms-auto">
                <li class="nav-item">
                    <a class="nav-link" href="/">Home</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link active" href="/Account/Login">Login</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/Account/Register">Register</a>
                </li>
            </ul>
        </div>
    </nav>

    <!-- Login Form -->
    <div class="login-box">
        <h2>Login</h2>

        @if (TempData["ResetSuccess"] != null)
        {
            <div class="alert alert-success text-center">@TempData["ResetSuccess"]</div>
        }

        <form asp-action="Login" method="post">
            <div class="mb-3">
                <label asp-for="Email" class="form-label">Email</label>
                <input asp-for="Email" class="form-control" required />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Password" class="form-label">Password</label>
                <input asp-for="Password" type="password" class="form-control" required />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="d-grid mb-3">
                <button type="submit" class="btn btn-primary">Login</button>
            </div>
            <div class="text-center mt-2">
                <a href="@Url.Action("ForgotPassword", "Account")">Forgot Password?</a>
            </div>

            <div class="text-center">
                <a href="@Url.Action("Register")">Don't have an account? Register here</a>
            </div>
        </form>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
