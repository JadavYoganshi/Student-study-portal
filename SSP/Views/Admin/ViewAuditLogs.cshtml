@model List<SSP.Models.Domain.AuditLog>

@{
    ViewData["Title"] = "Audit Logs";
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="mb-0">Audit Logs</h2>
        <a href="@Url.Action("AdminDashboard", "Admin")" class="btn btn-outline-primary">
            <i class="bi bi-arrow-left me-2"></i>Back to Dashboard
        </a>
    </div>

    <div class="card shadow-sm border-0">
        <div class="card-header bg-primary text-white fw-semibold fs-5">
            Login / Logout Records
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>ID</th>
                            <th>User Email</th>
                            <th>Action</th>
                            <th>Login Time</th>
                            <th>Logout Time</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var log in Model)
                        {
                            <tr>
                                <td>@log.Id</td>
                                <td>@log.UserEmail</td>
                                <td>@log.Action</td>
                                <td>@log.Timestamp.ToString("dd-MM-yyyy HH:mm")</td>
                                <td>
                                    @if (log.LogoutTime.HasValue)
                                    {
                                        @log.LogoutTime.Value.ToString("dd-MM-yyyy HH:mm")
                                    }
                                    else
                                    {
                                        <span class="text-warning fw-semibold">Still Logged In</span>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<style>
    .table-hover tbody tr:hover {
        background-color: #f2f2f2;
        transition: background-color 0.2s ease-in-out;
    }

    .table td, .table th {
        vertical-align: middle;
    }

    .card,
    .table,
    .table-responsive {
        box-shadow: none !important;
        transform: none !important;
        border: none !important;
    }
</style>
